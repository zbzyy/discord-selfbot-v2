# Discord Automation Suite - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Discord Self-Bot Token
# ⚠️ SECURITY RISK: Self-bots violate Discord TOS and may result in account ban
SELF_TOKEN=your-self-bot-token-here

# Discord Bot Token (for slash commands)
BOT_TOKEN=your-bot-token-here

# Owner User ID (Discord snowflake ID - only this user can execute commands)
OWNER_USER_ID=your-user-id-here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Webhook URL for notifications (leave empty to disable)
WEBHOOK_URL=

# Watch Keywords (comma-separated, for message monitoring)
WATCH_KEYWORDS=password,secret,admin,urgent

# Your Discord username (for keyword alerts when mentioned)
USERNAME=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable edited message logging (true/false)
LOG_EDITED=true

# Enable presence tracking (true/false)
LOG_PRESENCE=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=5

# Base delay for retry backoff (milliseconds)
BASE_DELAY_MS=1000

# Maximum messages to scrape in one operation
MAX_SCRAPE_LIMIT=100000

# Maximum messages to check for self-purge
SELF_PURGE_LIMIT=2000
